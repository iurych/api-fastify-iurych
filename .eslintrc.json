{
    "extends": "@rocketseat/eslint-config/node",
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "printWidth": 80,
                "tabWidth": 2,
                "singleQuote": true,
                "trailingComma": "all",
                "arrowParens": "always",
                "semi": false
            }
        ]
    }
}